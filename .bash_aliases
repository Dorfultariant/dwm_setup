
alias n="nvim "
alias smci="sudo make clean install"

alias grep='grep --color=auto'
alias l='ls -lah --color=auto'
alias ..='cd ..'
alias h='cd ~/'

alias gc='git commit -m'
alias gp='git push -u origin'
alias gaa='git add .'
alias gss='git status'
